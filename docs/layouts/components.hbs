<meta name="viewport" content="width=device-width, initial-scale=1.0">

<link rel="image_src" type="image/jpeg" href="/dist/docs/assets/images/share.png" />
<script charset="utf-8" src="/dist/components/platform.js"></script>
<link rel="import"  href="/dist/components/polymer/polymer.html">
